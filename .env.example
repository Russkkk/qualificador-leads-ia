APP_ENV=dev
DATABASE_URL=postgresql://user:password@localhost:5432/leadrank
DEMO_KEY=your_demo_key
FLASK_SECRET_KEY=change-me
DEBUG=true
INCLUDE_TRACEBACK=true
TRUST_PROXY=false
REQUIRE_API_KEY=false
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PRICE_IDS_JSON={}
BILLING_WEBHOOK_SECRET=whsec_xxx

KIWIFY_ACCOUNT_ID=your_account_id
KIWIFY_CLIENT_SECRET=your_client_secret
KIWIFY_API_KEY=your_api_key
KIWIFY_WEBHOOK_TOKEN=your_webhook_token

# --- Observabilidade (opcional) ---
SENTRY_DSN=
SENTRY_ENVIRONMENT=prod
SENTRY_TRACES_SAMPLE_RATE=0.0

# --- Demo mode (opcional) ---
# Expõe endpoints read-only com dados fictícios (ex.: /demo/acao_do_dia)
DEMO_MODE=false

# --- Captcha (Cloudflare Turnstile) (opcional) ---
# Para habilitar: configure as 2 chaves abaixo.
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
# Se true, /signup exige captcha válido.
CAPTCHA_ENFORCE=false
# Timeout do verify (segundos)
CAPTCHA_TIMEOUT_SECONDS=3
# Se true, falhas de rede não bloqueiam signup (soft-fail)
CAPTCHA_SOFT_FAIL=true

# --- Report de erros do front (opcional) ---
CLIENT_ERROR_REPORTING=false
CLIENT_ERROR_SAMPLE_RATE=0.05
